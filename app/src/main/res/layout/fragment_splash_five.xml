<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashScreensFragments.SplashFiveFragment">


    <ImageView
        android:id="@+id/image_splash_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic__"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/momental_sites_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_splash_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Save Translation"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/mulish_medium"
        />
    <TextView
        android:id="@+id/momental_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/momental_sites_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Real time translation and after that you have an option to save it at your translation folder "
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mulish_medium"
        android:textAlignment="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/darkGray"
        />
    <Button
        android:id="@+id/start_activity_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="30dp"
        android:text="Start"
        android:fontFamily="@font/mulish_bold"
        android:textColor="#000"
        app:cornerRadius="58dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>