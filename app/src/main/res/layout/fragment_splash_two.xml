<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreensFragments.SplashTwoFragment"
    >

    <ImageView
        android:id="@+id/bg_yellow_iv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_shaped_subtraction"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="7dp"
        />
    <ImageView
        android:id="@+id/pyramids_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pyramids"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bg_yellow_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitStart"
        />
    <ImageView
        android:id="@+id/pharoh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic__34"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_yellow_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="70dp"
        />
    <TextView
        android:id="@+id/heiro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_iv"
        android:layout_marginStart="70dp"
        android:text="Heiro"
        android:textSize="30sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/mulish_extrabold"
        />
    <TextView
        android:id="@+id/glyphic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/heiro_tv"
        app:layout_constraintTop_toBottomOf="@+id/icon_iv"
        android:text="Glyphic"
        android:textSize="30sp"
        android:textColor="@color/darkGray"
        android:fontFamily="@font/mulish_extrabold"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tourismapp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heiro_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="TOURISM APP"
        android:paddingTop="10dp"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/darkGray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tourismapp_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Discover the best Momental sites from over 26 Government  and start to enjoy real time translation"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/mulish_medium"
        android:textColor="@color/darkGray"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Skip to End"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:elevation="10dp"

        />







</androidx.constraintlayout.widget.ConstraintLayout>