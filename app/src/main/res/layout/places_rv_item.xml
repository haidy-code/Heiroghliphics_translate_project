<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    ************************ start componant of making rounded image circle*******************-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/folderTranslationImage_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/add"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        />
    <!--    ************************ End componant of making rounded image circle*******************-->


<!--********************** start of large linear layout (vertical) for making white rounded rectangle ******************-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/horizontal_linearlayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/horizontal_layout"
        android:elevation="3dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="55dp">

<!--********************** start horizontal layout inside large linear layout including text and icon *********************        -->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="25dp"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/translationPlace_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Another Folder"

            android:ellipsize="end"
            android:textSize="20sp"

            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"

            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/arrow_iv"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_right_arrow"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

<!--********************** End horizontal layout inside large linear layout including text and icon *********************        -->

<!--******************** Add text of number of translations inside vertical layout ********************-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="320dp"
            android:layout_height="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/translationsNumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 Translation"
                android:layout_marginLeft="60dp"
                android:visibility="gone"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>
<!--******************** End Add text of number of translations inside vertical layout ********************-->


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--********************** End of large linear layout (vertical) for making white rounded rectangle ******************-->


</androidx.constraintlayout.widget.ConstraintLayout>