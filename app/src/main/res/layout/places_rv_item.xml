<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/horizontal_linearlayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/horizontal_layout"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"
        android:layout_marginStart="55dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/folderTranslationImage_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_linearlayout"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_linearlayout"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/add"
        android:layout_marginStart="40dp"
        android:elevation="10dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#fff"
        />

    <TextView
        android:id="@+id/translationPlace_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/folderTranslationImage_iv"
        app:layout_constraintTop_toTopOf="@id/horizontal_linearlayout"
        app:layout_constraintBottom_toBottomOf="@+id/folderTranslationImage_iv"
        android:text="add another folder"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/mulish_medium"
        android:layout_marginLeft="20dp"
        android:elevation="7dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrow_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_linearlayout"
        app:layout_constraintBottom_toBottomOf="@+id/folderTranslationImage_iv"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_right_arrow"
        app:civ_border_width="3dp"
        app:civ_border_color="#fff"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:layout_marginEnd="30dp"
        />
    <TextView
        app:layout_constraintStart_toStartOf="@+id/translationPlace_tv"
        app:layout_constraintTop_toBottomOf="@+id/translationPlace_tv"
        android:id="@+id/translationsNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 Translation"
        android:elevation="7dp"
        android:fontFamily="@font/mulish_regular"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>