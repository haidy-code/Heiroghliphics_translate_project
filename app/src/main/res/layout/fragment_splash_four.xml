<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashScreensFragments.SplashFourFragment"

    >

    <ImageView
        android:id="@+id/image_splash_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_two"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/momental_sites_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_splash_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Capture Image"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/mulish_medium"
        />
    <TextView
        android:id="@+id/momental_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/momental_sites_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="You Can Use Your Camera And Start To Capture Your Hieroglyphics Symbol "
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mulish_medium"
        android:textAlignment="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/darkGray"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Skip to End"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:elevation="10dp"

        />

    <ImageView
        android:id="@+id/indicator_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/next"
        android:layout_marginBottom="40dp"
        android:src="@drawable/circle_blank"
        android:layout_marginEnd="50dp"

        />
    <ImageView
        android:id="@+id/indicator_two"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toEndOf="@+id/indicator_one"
        android:src="@drawable/circle_filled"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/indicator_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toEndOf="@+id/indicator_two"
        android:src="@drawable/circle_blank"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Next"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="15dp"
        />
    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Back"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="15dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>